<Window x:Class="Unilocker.Client.Views.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Reportar Problema" 
        Height="568" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        Topmost="True"
        ShowInTaskbar="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF9800" Padding="20">
            <StackPanel>
                <TextBlock Text="⚠️ Reportar Problema" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="¿Experimentaste algún problema con el equipo?" 
                           FontSize="12" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Form -->
        <Border Grid.Row="1" 
                Margin="20" 
                Background="White"
                CornerRadius="8"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                  ShadowDepth="2" 
                                  Opacity="0.2"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Si tuviste algún problema técnico con esta computadora, por favor repórtalo:" 
                           TextWrapping="Wrap"
                           FontSize="13"
                           Foreground="#555"
                           Margin="0,0,0,20"/>

                <!-- Tipo de Problema -->
                <TextBlock Text="Tipo de Problema:" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="CmbProblemType" 
                          Height="35"
                          FontSize="13"
                          Margin="0,0,0,15"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"/>


                <!-- Descripción -->
                <TextBlock Text="Descripción (opcional):" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="TxtDescription" 
                         Height="100"
                         FontSize="13"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Padding="8"
                         Margin="0,0,0,15"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"/>

                <!-- Status Message -->
                <TextBlock x:Name="TxtStatus" 
                           Text="" 
                           Foreground="Red"
                           FontSize="12"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"
                           Visibility="Collapsed"/>

                <!-- Progress Bar -->
                <ProgressBar x:Name="ProgressBar" 
                             Height="4"
                             IsIndeterminate="True"
                             Margin="0,0,0,10"
                             Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <Border Grid.Row="2" 
                Background="White" 
                Padding="20"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Botón Cerrar Sin Reportar -->
                <Button x:Name="BtnSkip" 
                        Grid.Column="0"
                        Content="Cerrar Sin Reportar"
                        Height="40"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Background="#9E9E9E"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnSkip_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#9E9E9E"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#757575"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                    <Setter Property="Foreground" Value="#999999"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Botón Enviar Reporte -->
                <Button x:Name="BtnSubmit" 
                        Grid.Column="2"
                        Content="Enviar Reporte"
                        Height="40"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Background="#FF9800"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnSubmit_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF9800"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F57C00"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                    <Setter Property="Foreground" Value="#999999"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>