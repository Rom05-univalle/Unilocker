<Window x:Class="Unilocker.Client.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Computadora - Unilocker" 
        Height="620" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <StackPanel Grid.Row="0" Background="#2196F3" Margin="-20,-20,-20,0">
            <TextBlock Text="🔒 UNILOCKER" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
            <TextBlock Text="Sistema de Registro de Computadoras" 
                       FontSize="12" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,20"/>
        </StackPanel>

        <!-- Información del sistema -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="5" 
                Margin="0,20,0,0">
            <StackPanel Margin="15">
                <TextBlock Text="Información del Equipo" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- UUID -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="UUID:" Margin="0,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" 
                               x:Name="TxtUuid" 
                               Text="Generando..." 
                               Margin="0,5"
                               Foreground="#666"
                               FontFamily="Consolas"/>

                    <!-- Marca -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Marca:" Margin="0,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" 
                               x:Name="TxtManufacturer" 
                               Text="Detectando..." 
                               Margin="0,5"
                               Foreground="#666"/>

                    <!-- Modelo -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Modelo:" Margin="0,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" 
                               x:Name="TxtModel" 
                               Text="Detectando..." 
                               Margin="0,5"
                               Foreground="#666"/>

                    <!-- Serial -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="N° Serie:" Margin="0,5"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" 
                               x:Name="TxtSerial" 
                               Text="Detectando..." 
                               Margin="0,5"
                               Foreground="#666"
                               FontFamily="Consolas"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Formulario de registro -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="5" 
                Margin="0,15,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">
                    <TextBlock Text="Datos de Registro" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>

                    <!-- Nombre del equipo -->
                    <TextBlock Text="Nombre del Equipo *" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtComputerName" 
                             Height="35" 
                             FontSize="14"
                             BorderBrush="#BDBDBD"
                             Margin="0,0,0,15">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="1">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="10,8"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Selección de aula -->
                    <TextBlock Text="Aula / Laboratorio *" Margin="0,0,0,5"/>
                    <ComboBox x:Name="CmbClassroom" 
                              Height="35" 
                              FontSize="14"
                              BorderBrush="#BDBDBD"
                              SelectedValuePath="Id"
                              Margin="0,0,0,10">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}" Margin="5,3"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Mensaje de estado -->
                    <TextBlock x:Name="TxtStatus" 
                               Text="" 
                               Foreground="#FF5722"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,10,0,0"
                               Visibility="Collapsed"/>

                    <!-- Barra de progreso -->
                    <ProgressBar x:Name="ProgressBar" 
                                 Height="5" 
                                 IsIndeterminate="True"
                                 Margin="0,10,0,0"
                                 Visibility="Collapsed"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Botón de registro -->
        <Button Grid.Row="3" 
                x:Name="BtnRegister" 
                Content="Registrar Equipo" 
                Height="45" 
                FontSize="16" 
                FontWeight="Bold"
                Background="#4CAF50" 
                Foreground="White" 
                BorderThickness="0"
                Cursor="Hand"
                Margin="0,15,0,0"
                Click="BtnRegister_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"
                                                      Margin="10"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#45A049"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#BDBDBD"/>
                            <Setter Property="Foreground" Value="#757575"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Nota al pie -->
        <TextBlock Grid.Row="4" 
                   Text="* Campos obligatorios" 
                   FontSize="11" 
                   Foreground="#999"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>