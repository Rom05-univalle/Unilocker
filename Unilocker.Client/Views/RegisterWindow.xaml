<Window x:Class="Unilocker.Client.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Computadora - Unilocker" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado UNIVALLE -->
        <StackPanel Grid.Row="0" Background="#800020" Margin="-20,-20,-20,0">
            <TextBlock Text="🎓 UNILOCKER" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,25,0,0"/>
            <TextBlock Text="UNIVERSIDAD PRIVADA DEL VALLE" 
                       FontSize="11" 
                       Foreground="White"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"
                       Opacity="0.9"/>
            <TextBlock Text="Registro de Equipos de Laboratorio" 
                       FontSize="13" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,25"/>
        </StackPanel>

        <!-- Información del sistema -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#800020" 
                BorderThickness="2" 
                CornerRadius="10" 
                Margin="0,25,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.15" Color="#424242"/>
            </Border.Effect>
            <StackPanel Margin="20">
                <TextBlock Text="💻 Información del Equipo" 
                           FontSize="15" 
                           FontWeight="Bold" 
                           Foreground="#800020"
                           Margin="0,0,0,15"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- UUID -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="🔑 UUID:" FontWeight="SemiBold" Foreground="#424242" Margin="0,8"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" 
                               x:Name="TxtUuid" 
                               Text="Generando..." 
                               Margin="0,8"
                               Foreground="#757575"
                               FontFamily="Consolas"
                               FontSize="11"/>

                    <!-- Marca -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="🏭 Marca:" FontWeight="SemiBold" Foreground="#424242" Margin="0,8"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" 
                               x:Name="TxtManufacturer" 
                               Text="Detectando..." 
                               Margin="0,8"
                               Foreground="#757575"/>

                    <!-- Modelo -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="📦 Modelo:" FontWeight="SemiBold" Foreground="#424242" Margin="0,8"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" 
                               x:Name="TxtModel" 
                               Text="Detectando..." 
                               Margin="0,8"
                               Foreground="#757575"/>

                    <!-- Serial -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="🔢 N° Serie:" FontWeight="SemiBold" Foreground="#424242" Margin="0,8"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" 
                               x:Name="TxtSerial" 
                               Text="Detectando..." 
                               Margin="0,8"
                               Foreground="#757575"
                               FontFamily="Consolas"
                               FontSize="11"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Formulario de registro -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#424242" 
                BorderThickness="2" 
                CornerRadius="10" 
                Margin="0,20,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.15" Color="#424242"/>
            </Border.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="📝 Datos de Registro" 
                               FontSize="15" 
                               FontWeight="Bold" 
                               Foreground="#424242"
                               Margin="0,0,0,18"/>

                    <!-- Nombre del equipo -->
                    <TextBlock Text="💻 Nombre del Equipo *" 
                               FontWeight="SemiBold"
                               Foreground="#424242"
                               Margin="0,0,0,8"/>
                    <Border BorderBrush="#800020" 
                            BorderThickness="2" 
                            CornerRadius="8"
                            Margin="0,0,0,18">
                        <TextBox x:Name="TxtComputerName" 
                                 Height="40" 
                                 FontSize="14"
                                 Padding="12,10"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                    </Border>

                    <!-- Selección de aula -->
                    <TextBlock Text="🏫 Aula / Laboratorio *" 
                               FontWeight="SemiBold"
                               Foreground="#424242"
                               Margin="0,0,0,8"/>
                    <Border BorderBrush="#800020" 
                            BorderThickness="2" 
                            CornerRadius="8"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Stretch">
                        <ComboBox x:Name="CmbClassroom" 
                                  Height="50" 
                                  FontSize="16"
                                  Padding="15,10"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  SelectedValuePath="Id"
                                  MaxDropDownHeight="400"
                                  HorizontalAlignment="Stretch"
                                  HorizontalContentAlignment="Left">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}" 
                                               Margin="5,5"
                                               FontSize="15"
                                               TextWrapping="NoWrap"
                                               TextTrimming="None"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="MinWidth" Value="600"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                    </Border>

                    <!-- Mensaje de estado -->
                    <Border x:Name="StatusBorder"
                            Background="#FFEBEE"
                            BorderBrush="#F44336"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="15"
                            Margin="0,10,0,15"
                            Visibility="Collapsed">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2" Color="Black"/>
                        </Border.Effect>
                        <TextBlock x:Name="TxtStatus" 
                                   Text="" 
                                   Foreground="#C62828"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"
                                   LineHeight="22"/>
                    </Border>

                    <!-- Barra de progreso -->
                    <ProgressBar x:Name="ProgressBar" 
                                 Height="5" 
                                 IsIndeterminate="True"
                                 Foreground="#800020"
                                 Margin="0,5,0,0"
                                 Visibility="Collapsed"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Botón de registro -->
        <Button Grid.Row="3" 
                x:Name="BtnRegister" 
                Content="✓ REGISTRAR EQUIPO" 
                Height="50" 
                FontSize="16" 
                FontWeight="Bold"
                Background="#800020" 
                Foreground="White" 
                BorderThickness="0"
                Cursor="Hand"
                Margin="0,20,0,0"
                Click="BtnRegister_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#800020"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="10">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3" Color="#800020"/>
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"
                                                      Margin="10"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#600018"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#BDBDBD"/>
                            <Setter Property="Foreground" Value="#757575"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Nota al pie -->
        <Border Grid.Row="4"
                Background="#FFF9C4"
                CornerRadius="5"
                Padding="10"
                Margin="0,15,0,0">
            <TextBlock Text="⚠️ * Campos obligatorios - Asegúrate de seleccionar el aula correcta" 
                       FontSize="11" 
                       Foreground="#F57F17"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>
        </Border>
    </Grid>
</Window>